# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/dataroom

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Storage Configuration
STORAGE_TYPE=s3  # Options: 'local' or 's3'

# AWS S3 Configuration (only needed if STORAGE_TYPE=s3)
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Optional: CloudFront CDN Domain (for faster S3 access)
AWS_CLOUDFRONT_DOMAIN=d1234567890abc.cloudfront.net

# Local Storage Configuration (only needed if STORAGE_TYPE=local)
UPLOAD_DIR=./uploads

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB
PREVIEW_DIR=./uploads/previews

# Server
PORT=3000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000
UPLOAD_RATE_LIMIT_MAX=10

# Storage Quotas
DEFAULT_STORAGE_QUOTA=5368709120  # 5GB
